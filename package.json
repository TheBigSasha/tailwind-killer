{
  "name": "tailwind-killer",
  "version": "1.0.2",
  "description": "Tailwind Killer is a powerful CLI tool designed to remove Tailwind CSS from your project and migrate to regular CSS. It automates the process of converting Tailwind classes to standard CSS, making it easier to transition away from Tailwind or to refactor your existing codebase.",
  "bin": {
    "cli-typescript-starter": "./bin/run"
  },
  "directories": {
    "lib": "src",
    "bin": "bin"
  },
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/thebigsasha/tailwind-killer.git"
  },
  "scripts": {
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "clean": "rimraf dist",
    "commit": "cz",
    "commitlint": "commitlint --edit",
    "compile": "tsc",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "ts-node ./bin/run.ts",
    "start:node": "node ./bin/run",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky",
    "release": "semantic-release",
    "test:coverage": "jest --coverage",
    "test:esm": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "typescript",
    "starter",
    "cli",
    "bootstrap"
  ],
  "author": "Sasha Aleshchenko <me@thebigsasha.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.11.1",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.9",
    "@types/prompts": "^2.4.9",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "semantic-release": "^23.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "astro": "^4.15.9",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "fs": "0.0.1-security",
    "giget": "^1.2.3",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "picocolors": "^1.1.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^23.4.1",
    "tailwindcss": "^3.4.13",
    "tw-to-css": "^0.0.12",
    "yargs": "^17.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "type": "module"
}
